<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= paragraphHome%></p>

<div class="container-fluid mt-3">
  
  <% posts. forEach((post) => { %>
    <!-- <a href="/post/<%=post._id%>"> -->
      <article class="mb-3 post" onclick="window.location.href='/post/<%= post._id %>'">
          <form class="delete-form" action="/delete" method="post">
            <button type="submit" class="delete-button fa-solid fa-trash fa-lg" name="deleteId" value="<%= post._id %>"> </button>
          </form>
        <h2 class="postHeading">
          <%= post.postTitle %>
        </h2>
        
        <p><em><%= post.postDate.toLocaleString('en-GB', "full")%></em></p>
        <p>
          
          <%= post.postContent.substring(0,300) + " ..."%>
          
        </p>
      </article>
    <!-- </a> -->
  <% }) %>
  
</div>

<%- include("partials/footer") -%>